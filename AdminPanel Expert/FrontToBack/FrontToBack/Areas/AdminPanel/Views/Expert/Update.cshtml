@model Expert

@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Expert</h4>
            <img src="~/img/@Model.ImageName" style="height: 100px; width: 100px;" />
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" data-val="false" class="form-control" accept="image/*">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname</label>
                    <input class="form-control" asp-for="Surname" placeholder="Surname">
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Field">Field</label>
                    <input class="form-control" asp-for="Field" placeholder="Field">
                    <span class="text-danger" asp-validation-for="Field"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-controller="Expert" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationPartial" />
}