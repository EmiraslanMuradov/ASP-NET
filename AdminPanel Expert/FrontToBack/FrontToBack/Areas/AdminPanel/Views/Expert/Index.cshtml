@{
    ViewData["Title"] = "Index";
    ExpertViewModel expertViewModel = Model;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Expert Description</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Text</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <p>@Html.Raw(expertViewModel.ExpertText.Title)</p><br />
                                <p>@expertViewModel.ExpertText.Subtitle</p>
                            </td>
                            <td>
                                <a class="btn btn-success" asp-controller="Expert" asp-action="Edit" asp-route-id=@expertViewModel.ExpertText.Id><b>Edit..</b><i class="mdi mdi-pen"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <hr />
            <h4 class="card-title">Experts</h4>
            <a class="btn btn-primary" asp-controller="Expert" asp-action="Create">Add Expert</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Expert</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in expertViewModel.Experts)
                        {
                            <tr>
                                <td><img style="height: 100px; width: 100px;" src="~/img/@item.ImageName" /> <hr />@item.Name @item.Surname <hr />@item.Field</td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="Expert" asp-action="Update" asp-route-id=@item.Id>Update</a>
                                    <a class="btn btn-danger" asp-controller="Expert" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


