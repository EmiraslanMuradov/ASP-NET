@model ExpertText

@{
    ViewData["Title"] = "Edit";
}


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Expert Description</h4>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <textarea asp-for="Title" class="form-control" rows="10"></textarea>
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subtitle">Subtitle</label>
                    <input class="form-control" asp-for="Subtitle" placeholder="Subtitle">
                    <span class="text-danger" asp-validation-for="Subtitle"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-controller="Expert" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationPartial"/>
        <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>

        <script>
            ClassicEditor
                .create(document.querySelector('#Title'))
                .catch(error => {
                    console.error(error);
                });
        </script>
}


