@model List<Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Add Category</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id=@item.Id>Update</a>
                                    <a class="btn btn-success" asp-controller="Category" asp-action="Detail" asp-route-id=@item.Id>Detail</a>
                                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

